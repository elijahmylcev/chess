{
  "extends": ["plugin:react/recommended", "plugin:react/jsx-runtime", "react-app", "react-app/jest", "airbnb", "airbnb-typescript"],
  "plugins": ["react"],
  
  "parserOptions": {
    // "parser": "@typescript-eslint/parser",
    "project": ["tsconfig.json"],
    "ecmaFeatures": {
      "ecmaVersion": 12,
      "jsx": true
    }
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "import/prefer-default-export": "off",
    "no-plusplus": "off"
  }
}